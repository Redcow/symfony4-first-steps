{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion</h1>

    <form method="post" action="{{ path('security_login') }}">
        <div class="form-group">
            <input class="form-control" placeholder="Adresse Email" required name="_username">
        </div>
        <div class="form-group">
            <input class="form-control" placeholder="Mot de passe" required name="_password" type="password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Se connecter</button>
        </div>
    </form>
{% endblock %}