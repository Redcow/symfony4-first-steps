{% extends "base.html.twig" %}

{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block body %}

    <h1>
        {% if editMode %}
            Modification de l'article
        {% else %}
            Cr√©ation d'un nouvel article
        {% endif %}
    </h1>

    {{ form_start(form) }}

    {{ form_row(form.title, {"attr" : {'placeholder' : "Titre de l'article"}}) }}

    {{ form_row(form.content, {"attr" : {'placeholder' : "Contenu de l'article"}}) }}

    {{ form_row(form.image, {"attr" : {'placeholder' : "URL de l'image"}}) }}

    <button class="btn btn-success">
        {% if editMode %}
            Enregistrer
        {% else %}
            Ajouter l'article
        {% endif %}
    </button>

    {{ form_end(form) }}

{% endblock %}